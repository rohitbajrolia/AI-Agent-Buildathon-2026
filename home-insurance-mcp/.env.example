# Copy to .env and fill in values

# OpenAI
OPENAI_API_KEY=

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=home_insurance_docs

# MCP server
MCP_PORT=4200

# Bind address (default is localhost). For access from another device, use 0.0.0.0.
MCP_HOST=127.0.0.1

# Safety: restrict ingest/index to this docs root.
MCP_DOCS_ROOT=C:\\AI-Agent-Buildathon-2026\\docs

# Reliability: OCR fallback for scanned PDFs (requires Tesseract + PyMuPDF).
ENABLE_PDF_OCR_FALLBACK=1

# Demo: verify the OpenAI key during index_status so the UI can block early.
CHECK_OPENAI_ON_INDEX_STATUS=1

# Cache OpenAI validation results (seconds) to reduce repeated calls/cost.
OPENAI_INDEX_STATUS_CACHE_SECONDS=60
